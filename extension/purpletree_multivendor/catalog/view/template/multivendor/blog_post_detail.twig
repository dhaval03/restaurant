{{ header }}
<div class="pts-blog-main">
	<div class="container">
		<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
			<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		</ul>
		{% if success %}
		<div class="alert pts-alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
		{% endif %}
		<div class="row d-flex">
			<div class="col-sm-9">{{ content_top }}
				<h1>{{ heading_title }}</h1>
				<img src="{{ image }}" class="img-responsive" />
				{{ description }}
				{{ post_date }}
				{% if post_tags %}
				{% for tag in post_tags %}
				{% if tag %}
				<span>{{ tag }}</span>
				{% endif %} 
				{% endfor %}
				{% endif %}
				<div>
					<span class="label-error"><h3>{{ text_comment_heading }}: {{ comment_count }}</h3></span>
					<hr />
				</div>
				{% if post_comments %}
				{% for post_comment in post_comments %}
				<div class="well well-sm">
					<div><strong>{{ post_comment.name }}</strong></div>			
					<div>{{ post_comment.date }}</div>
					<div>{{ post_comment.text }}</div>
				</div>
				{% endfor %}
				{% else %}
				{{ text_comment_empty }}
				{% endif %}
				<div class="col-sm-12">
					<span class="label-error"><h3>{{ text_comment_reply }}</h3></span>
				</div>
				<div class="col-sm-12">
					<form action="{{ action }}" method="post" enctype="multipart/form-data" class="pts-form-horizontal">
						<fieldset>
							<div class="form-group required row mb-2">
								<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
								<div class="col-sm-10">
									<input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
									{% if error_name %}
									<div class="text-danger">{{ error_name }}</div>
									{% endif %}
								</div>
							</div>
							<div class="form-group required row mb-2">
								<label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
								<div class="col-sm-10">
									<input type="text" name="email_id" value="{{ email_id }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
									{% if error_email_id %}
									<div class="text-danger">{{ error_email_id }}</div>
									{% endif %}
								</div>
							</div>
							<div class="form-group required row mb-2">
								<label class="col-sm-2 control-label" for="input-text">{{ entry_text }}</label>
								<div class="col-sm-10">
									<textarea name="text" placeholder="{{ entry_text }}" id="input-text" class="form-control">{{ text }}</textarea>
									{% if error_text %}
									<div class="text-danger">{{ error_text }}</div>
									{% endif %}
								</div>
							</div>
						</fieldset>
						<div class="buttons clearfix">
							<div class="text-end mt-2">
								<input type="submit" value="{{ button_comment }}" class="btn btn-primary" />
							</div>
						</div>
					</form>
				</div>
			{{ content_bottom }}</div>
			<div class="col-sm-3">
				<div class="">
					{% if pts_blogs %}
					<h1>{{ text_popupar_posts }}</h1>
					<div class="">
						<div>
							{% for popular_blog in pts_blogs %}
							
							<a href="{{ popular_blog.href }}">
								<div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 product-thumb">
									<div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 text-center">
										<b>{{ popular_blog.date }}</b>
										<h5>{{ popular_blog.title }}</h5>
									</div>
									<div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
										<div class="text-center"><img src="{{ popular_blog.thumb }}"></div>
									</div>
									
								</div>
							</a>
							
							{% endfor %}
						</div>
					</div>
					{% endif %}
					
				</div>
			</div></div>
	</div>
</div>
<script>
	jQuery(".pts-blog-category-plus").click(function(){
		$(this).next().css("display","block");
		$(this).css("display","none");
	});
	jQuery(".pts-blog-category-minus").click(function(){
		$(this).prev().css("display","block");
		$(this).css("display","none");
	});
</script>
{{ footer }}