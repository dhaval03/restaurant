{{ header }}
<div class="pts-container container">
	<ul class="pts-breadcrumb breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<style>
	.page-title-wrapper{
	       float: left !important;
		   
	} 
	.right-block{
	       position: relative;
	}
	</style>
	{% if error_warning %}
	<div class="alert pts-alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
	{% endif %}
	<div class="pts-row d-flex row">
	{% if column_right %}
    {% set class = 'col-sm-9 col-sm-9' %}
	{% set classproducts = 'col-lg-4 col-md-4' %}
    {% else %}
    {% set class = 'col-sm-12 col-sm-12' %}
	{% set classproducts = 'col-lg-3 col-md-3' %}
    {% endif %}
    <div id="pts-content" class="{{ class }}">{{ content_top }}
	{% if storepage_layout %}
			<div class="row">
				{% if store_video %}     
				<div class="col-sm-7">
					<img src="{{ store_banner }}" class="img-responsive ptsc-store-bannermhmt" alt="Image">
				</div>
				<div class="col-sm-5 ptsvideo"> 
					<iframe src="{{ store_video }}" class="ptsc-store-maphw"> </iframe>
				</div>
				{% else %} 
				
				<div class="pts-banner">
					<img class="img-responsive ptsc-quick-deliverb" src="{{ store_banner }}">
				</div>
				
				{% endif %}
			</div>				  
			<div class="row ptsrow2">
				<div class="col-sm-7 ptsinsidecol">
					<div class="pts-well">
						<div class="col-sm-6">
							<div class="row ptsc-store-imagemb">
								<div class="col-sm-6" >
									<img src="{{ store_logo }}" class="img-responsive" alt="Image">
								</div>
								<div class="col-sm-6">
									<h4>{{ store_name }}</h4>
									{% if seller_review_status %}
									{% if store_rating.rating %}
									<div class="rating pts-text-left">
										{% for i in 1..5 %}
										{% if store_rating.rating < i %} <span class="fa fa-stack star-seller"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack star-seller"><i class="fa fa-star fa-stack-2x" ></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
										{% endfor %}({{ store_rating.rating|number_format(1) }})
									</div>
									{% else %}
									{% for i in 1..5 %}
									<span class="fa fa-stack star-seller"><i class="fa fa-star-o fa-stack-1x" ></i></span>
									{% endfor %}({{ store_rating.rating|number_format(1) }})
									{% endif %}
									<div class="store-rating">
										<a href="{{ store_review }}" target="_blank">{{ text_sellerreview }} ({{ store_rating['count'] }})</a>
									</div>
									{% endif %}
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12" >
									{% if (module_purpletree_multivendor_store_email) is not null %} <b>Email:</b>  {{ store_email }} {% endif %}<br>	
									{% if (module_purpletree_multivendor_store_address) is not null %}<b>Address:</b>  {{ store_address }}
									<p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp{{ store_city }}{{ store_state }}<p/><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp{{ store_country }}{{ store_zipcode }}<p/>
									{% endif %}<br>
									{% if (module_purpletree_multivendor_store_phone) is not null %}<b>Tel. no:</b>  {{ store_phone }}{% endif %}<br>
									{% if (module_purpletree_multivendor_store_social_link) is not null %}
									<div class="social-icons d-flex justify-content-between">
										{% if facebook_link != '' %}
										<a target="_blank" href="{{ facebook_link }}"><i class="fa fa-facebook-square ptsc-store-facebo"></i></a>
										{% endif %}
										{% if twitter_link != '' %}
										<a target="_blank" href="{{ twitter_link  }}"><i class="fa fa-tumblr-square"></i></a>
										{% endif %}
										<!--{% if google_link != '' %}
										<a  target="_blank" href="{{ google_link }}"><i class="fa fa-google-plus-square"></i></a>
										{% endif %}-->
										{% if instagram_link != '' %}
										<a  target="_blank" href="{{ instagram_link }}"><i class="fa fa-instagram"></i></a>
										{% endif %}
										{% if pinterest_link != '' %}
										<a target="_blank" href="{{ pinterest_link }}"><i class="fa fa-pinterest-square"></i></a>
										{% endif %}
										{% if wesbsite_link != '' %}
										<a target="_blank" href="{{ wesbsite_link }}"><i class="fa fa-globe"></i></a>
										{% endif %}
										{% if whatsapp_link != '' %}
										<a target="_blank" href="{{ whatsapp_link }}"><i class="fa fa-whatsapp"></i></a>
										{% endif %}
									</div>
									{% endif %}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-6">
								<b><h3 class="text-end">{{ text_store_timings }}</h3></b>
								<div class="text-end">
									<h4>{{ store_timings }}</h4>
								</div>
							</div>
						</div>
						
					</div>
					
				</div>
				
				{% if google_map %}
				<div class="col-sm-5 ptsstoreimage"> 
					<img src="{{ store_image }}" class="img-responsive ptsc-store-mapmh" alt="Image">  
				</div>
				{% else %}
				<div class="col-sm-5 ptsstoreimage"> 
					<img src="{{ store_image }}" class="img-responsive ptsc-store-imagemhmb" alt="Image">  
				</div>
				{% endif %}
			</div>
			<div class="row">
				{% if store_description %}  
				<div class="col-sm-7 ptsimage">
					<div class="pts-well" id="ptsabout1">
						{{ store_description }}								
					</div>
				</div>
				{% endif %}
				{% if google_map %}
				<div class="col-sm-5 ptsgooglemap"> 
					<iframe src="{{ google_map }}" class="ptsc-store-maphw"> </iframe>
				    {{ store_google_map }}
				</div>
				{% endif %}
			</div>
			{% if seller_products %}
			<div class="pts-well ptsfilter">
				<div class="row">
					<div class="col-md-4 col-xs-0 pull-left ptsc-store-marlef">
						<h3 class="ptsc-store-proh3">{{ 'Product / Services' }}</h3>
					</div>
					<div class="col-md-4 col-xs-6 pull-right">
						<div class="form-group input-group input-group-sm">
							<label class="pts-input-group-text" for="input-sort">{{ text_sort }}</label>
							<select id="input-sort" class="form-select" onchange="location = this.value;">
								{% for sorts in sorts %}
								{% if sorts.value == '%s-%s'|format(sort, order) %}
								<option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
								{% else %}
								<option value="{{ sorts.href }}">{{ sorts.text }}</option>
								{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="col-md-3 col-xs-6  pull-right ptsc-store-padd">
						<div class="form-group input-group input-group-sm">
							<label class="input-group-text" for="input-limit">{{ text_limit }}</label>
							<select id="input-limit" class="form-select" onchange="location = this.value;">
								{% for limits in limits %}
								{% if limits.value == limit %}
								<option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
								{% else %}
								<option value="{{ limits.href }}">{{ limits.text }}</option>
								{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div id="product-list" class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4">
					{% for product in seller_products %}
						<div class="col">{{ product }}</div>
					{% endfor %}
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6 text-start">{{ pagination }}</div>
				<div class="col-sm-6 text-end">{{ results }}</div>
			</div>
			{% else %}
			<div class="text-center"><h3>{{ text_no_results }}</h3></div>
			{% endif %}
	
{% else %}
		<h1 class="ptsc-store-name">{{ store_name }}</h1>
		<div class="pts-banner">
			<img class="img-responsive ptsc-quick-deliverb" src="{{ store_banner }}">
		</div>
		{% if not check_category_bar %}
		<div class="row">
		<div class="col-md-12 p-0 form-group">
			<div class="store-navbar">
				<li>
					<a href="{{ allCategory }}">{{ text_all }}</a>
				</li>
				{% if storeMenu %}
				{% for key,value in storeMenu %}
				<li>
					<a href="{{ value.url }}">{{ value.name }}</a>
				</li>
				{% endfor %}
				{% endif %}
			</div>
		</div>
		</div>		
		{% endif %}
		<div class="row ptsc-store-marlef mt-3">
			<div class="store_top_div clearfix row">
				<div class="col-sm-3  seller_pannel_store" style="height:fit-content;">
					<div class="store_logo text-center">
						<img class="img-responsive m-auto" src="{{ store_logo }}">
					</div>
					{% if (module_purpletree_multivendor_seller_name)%}
					<div class="seller-name">
						<h3 class="ptsc-store-sellnamar">{{ seller_name }}</h3>
					</div>
					{% endif %}
					{% if seller_review_status %}
					{% if store_rating.rating %}
					<div class="rating pts-text-left">
						{% for i in 1..5 %}
						{% if store_rating.rating < i %} <span class="fas fa-stack star-seller"><i class="far fa-star fa-stack-2x"></i></span> {% else %} <span class="fas fa-stack star-seller"><i class="fas fa-star fa-stack-2x" ></i><i class="far fa-star fa-stack-2x"></i></span> {% endif %}
						{% endfor %}({{ store_rating.rating|number_format(1) }})
					</div>
					{% else %}
					{% for i in 1..5 %}
					<span class="fas fa-stack star-seller"><i class="far fa-star fa-stack-1x" ></i></span>
					{% endfor %}({{ store_rating.rating|number_format(1) }})
					{% endif %}
					<div class="store-rating">
						<a href="{{ store_review }}" target="_blank">{{ text_sellerreview }} ({{ store_rating['count'] }})</a>
					</div>
					{% endif %}
					{% if (module_purpletree_multivendor_store_social_link) %}
					<div class="social-icons justify-content-between">
						{% if facebook_link != '' %}
						<a target="_blank" href="{{ facebook_link }}"><i class="fab fa-facebook-square ptsc-store-facebo"></i></a> {% endif %}
						{% if twitter_link != '' %}
						<a target="_blank" href="{{ twitter_link  }}"><i class="fab fa-tumblr-square"></i></a>
						{% endif %}
						<!--{% if google_link != '' %}
						<a  target="_blank" href="{{ google_link }}"><i class="fa fa-google-plus-square"></i></a>
						{% endif %}-->
						{% if instagram_link != '' %}
						<a  target="_blank" href="{{ instagram_link }}"><i class="fab fa-instagram"></i></a>
						{% endif %}
						{% if pinterest_link != '' %}
						<a target="_blank" href="{{ pinterest_link }}"><i class="fab fa-pinterest-square"></i></a>
						{% endif %}
						{% if wesbsite_link != '' %}
						<a target="_blank" href="{{ wesbsite_link }}"><i class="fa fa-globe"></i></a>
						{% endif %}
						
						{% if whatsapp_link != '' %}
						<a target="_blank" href="{{ whatsapp_link }}"><i class="fab fa-whatsapp"></i></a>
						{% endif %}
					</div>
					{% endif %}
					<div class="seller-info">
						<div class="contact-info">
							{% if (module_purpletree_multivendor_store_email) %}
							<div class="seller-email">
								<div><i class="fa fa-envelope" aria-hidden="true"></i> {{ store_email }}</div>
							</div>
							{% endif %}
							{% if (module_purpletree_multivendor_store_phone)  %}
							<div class="seller-phone">
								<div><i class="fa fa-phone" aria-hidden="true"></i> {{ store_phone }}</div>
							</div>
							{% endif %}
							{% if (module_purpletree_multivendor_store_address) %}
							<div class="seller-address">
								<div><i class="fa fa-home" aria-hidden="true"></i>{{ store_address }}<p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp{{ store_city }}{{ store_state }}<p/><p>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp{{ store_country }}{{ store_zipcode }}<p/></div>
							</div>
							{% endif %}
						</div>
						<div class="seller-about">
							<div>
								<a href="{{ store_about }}" target="_blank">{{ text_aboutstore }}
									<i class="fa fa-angle-right pts-r"></i>
								</a>
							</div>
						</div>
						
						<div class="seller-shipping">
							<div>
								<a href="{{ store_shipping_policy }}" target="_blank">{{ text_shippingpolicy }}
									<i class="fa fa-angle-right pts-r"></i>
								</a>
							</div>
						</div>
						<div class="seller-return">
							<div>
								<a href="{{ store_return_policy }}" target="_blank">{{ text_returnpolicy }}
									<i class="fa fa-angle-right pts-r"></i>
								</a>
							</div>
						</div>								
					</div>
					<div class="seller-return text-center">
						<div class=" contact_seller_link">
							<a href="{{ seller_contact }}" class="contact_seller ptsc-store-sellcontactc" target="_blank"><img src="extension/purpletree_multivendor/catalog/view/assets/image/contact_seller.png" width="20px" height="20px"> {{text_sellercontact }}</a>
						</div>
					</div>
					<div class="seller-name">
						<h3>{{products_categories}}</h3>
					</div>
					<div class="pts-list-group" >
						{% if categories %}
						
						{%for category in categories %}
						<a href="{{category['href']}}" class="pts-list-group-item {{category['active']}}">{{ category['name'] }}</a>
						{% if category.subcategories %}
						{%for subcat in category.subcategories %}
						<a href="{{subcat['href']}}" class="pts-list-group-item {{subcat['active']}}"><span>&nbsp;&nbsp;-&nbsp;</span>{{ subcat['name'] }}</a>
						{% endfor %}
						{% endif %}
						{% endfor %}
						{% endif %}
					</div>
				</div>
				<div class="col-sm-9">
					<div class="col-md-12 form-group">
						{{ store_description }}
					</div>
					{% if seller_products %}
					<div class="row mb-2">
						<div class="col-md-2 col-sm-6 hidden-xs">
							
						</div>
						<div class="col-md-3 col-sm-6">
							
						</div>
						<div class="col-md-4 col-xs-6 pull-right mb-2">
							<div class="form-group input-group input-group-sm">
								<label class="input-group-text" for="input-sort">{{ text_sort }}</label>
								<select id="input-sort" class="form-select" onchange="location = this.value;">
									{% for sorts in sorts %}
									{% if sorts.value == '%s-%s'|format(sort, order) %}
									<option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
									{% else %}
									<option value="{{ sorts.href }}">{{ sorts.text }}</option>
									{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
						<div class="col-md-3 col-xs-6  pull-right mb-2">
							<div class="form-group input-group input-group-sm">
								<label class="input-group-text" for="input-limit">{{ text_limit }}</label>
								<select id="input-limit" class="form-select" onchange="location = this.value;">
									{% for limits in limits %}
									{% if limits.value == limit %}
									<option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
									{% else %}
									<option value="{{ limits.href }}">{{ limits.text }}</option>
									{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
					</div>
					<div class="row">
						<div id="product-list" class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4">
							{% for product in seller_products %}
								<div class="col">{{ product }}</div>
							{% endfor %}
						</div>
					</div>
					<div class="row">
						<div class="col-sm-6 text-start">{{ pagination }}</div>
						<div class="col-sm-6 text-end">{{ results }}</div>
					</div>
					{% else %}
					<div class="text-center"><h3>{{ text_no_results }}</h3></div>
					{% endif %}
				</div>
			</div>
		</div>
{% endif %}
{{ content_bottom }}</div>
{{ column_right }}</div>
</div>
{% if module_purpletree_multivendor_allow_live_chat %}
{% if store_live_chat_enable %}
{% if store_live_chat_code != '' %}
<!--Start of Tawk.to Script-->
<script>
	$(document).ready(function(){
		If($(window).width() < 768){
			$('#ptsstorevideo').removeAttr('style');
		}
	});
</script>
{{ store_live_chat_code }}
<!--End of Tawk.to Script-->
{% endif %}
{% endif %}
{% endif %}
<script type="text/javascript">
	if (localStorage.getItem('display') == 'list') {
		$('#list-view').trigger('click');
		} else {
		$('#grid-view').trigger('click');
	}
	
</script>
<script>
$(window).on('load', function(){
	$('aside#column-right').addClass('pts-col-sm-3 col-sm-3');
});
</script>
<link href="extension/purpletree_multivendor/catalog/view/assets/css/commonstylesheet.css" type="text/css" rel="stylesheet" />
{{ footer }}
