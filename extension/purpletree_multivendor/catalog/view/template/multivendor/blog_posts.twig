{{ header }}
<div class="container">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<div>
	
		<div id="content">{{ content_top }}
			<h2>{{ heading_title }}</h2>
			{% if blog %}
			<div class="row">
				{% for pts_blog in blog %}
				<div class="col-lg-3  col-md-3 col-sm-6 col-xs-12">	<div class="text-center product-thumb">	  
					<div class="transition">
						
						<div class="text-center">
							{{ pts_blog.date }}
						</div>			
						<div><a href="{{ pts_blog.href }}"><img src="{{ pts_blog.thumb }}" alt="{{ pts_blog.title }}" title="{{ pts_blog.title }}" class="img-responsive" ></a></div>
						<div class="caption">
							<h4><a href="{{ pts_blog.href }}">{{ pts_blog.title }}</a></h4>
							<p>{{ pts_blog.description }}</p>
						</div>
						<div class="text-center">
							<a href="{{ pts_blog.href }}">{{ text_readmore }}</a>
						</div>
					</div>
				</div>
				</div>
				{% endfor %}
			</div>
			<div class="row">
				<div class="col-sm-6 text-start">{{ pagination }}</div>
				<div class="col-sm-6 text-end">{{ results }}</div>
			</div>
			{% else %}
			<p>{{ text_empty }}</p>
			<div class="buttons">
				<div class="float-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
			</div>
			{% endif %}
		{{ content_bottom }}</div>
	</div>
</div>
{{ footer }}
