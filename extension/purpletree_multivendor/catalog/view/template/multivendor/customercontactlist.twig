{{ header }}
<div class="pts-container container">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<div class="pts-row d-flex row">{{ column_left }}
		{% if column_left and column_right %}
		{% set class = 'pts-col-sm-6 col-sm-6' %}
		{% elseif column_left or column_right %}
		{% set class = 'pts-col-sm-9 col-sm-9' %}
		{% else %}
		{% set class = 'pts-col-sm-12 col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}		
			<h1>{{ heading_title }}</h1>
			{% if helpcheck %}
			<div class="float-end">
				<a href="{{ helplink }}" rel=”nofollow”  target="_blank" id="button-pts-help" class="btn"><img src="{{ helpimage }}" alt="Help" width="85" height="43"></a>
			</div>
		{% endif %}
			{% if sellercontacts %}
			{% for contact in sellercontacts %}
			<table class="table table-striped table-bordered">
				<tr>
					<td class="ptsc-cuscontact-widthh"><strong>{{ contact.customer_name }}</strong><br>
					<strong>{% if contact.customer_id ==0 %}{{ contact.customer_email }}{% endif %}</strong></td>
					<td class="text-end"><a href='{{ contact.reply }}' > {{ button_view_all }} </a> </td>
				</tr>
				<tr>
					
					<td class="ptsc-cuscontact-width">
						<p>{{ contact.message }} </p>
					</td>
					<td colspan="2">
						{{ contact.date_added }} 
					</td>
				</tr>
			</table>
			{% endfor %}
			<div class="row">
			<div class="col-sm-6 text-start">{{ pagination }}</div>
			<div class="col-sm-6 text-end">{{ results }}</div>
			</div>
			{% else %}
			<div class="text-center">{{ text_empty_result }}</div>
			{% endif %}
		{{ content_bottom }}</div>
	{{ column_right }}</div>
</div>
<script>
	$(window).load(function() {
		
			$('aside#column-right').addClass('pts-col-sm-3 col-sm-3');
		
		});
</script>
{{ footer }}