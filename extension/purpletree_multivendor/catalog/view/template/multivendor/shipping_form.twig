{{ header }}
<div class="pts-container container">
<div class="pts-row d-flex row">{{ column_left }}
		<div id="content" class="pts-col-sm-9 col-sm-9 pts-col-md-9 col-md-9 pts-col-lg-10 col-lg-10 pts-col-xs-12 col-xs-12"> 
			<div class="page-header">
	{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    {% if success %}
    <div class="alert pts-alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    <div class="container-fluid">
     <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
	  {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
              </ul>
			  <div class="pts-pull-right">
				<button type="submit" form="form-customer" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
			<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="pts-btn pts-btn-default"><i class="fa fa-reply"></i></a>
			{% if helpcheck %}
					<a href="{{ helplink }}" rel=”nofollow”  target="_blank" id="button-pts-help" class="btn"><img src="{{ helpimage }}" alt="Help" width="85" height="43"></a>
				{% endif %}
			</div>
    </div>
  </div>
			<div class="pts-panel pts-panel-default" >
			<div class="pts-panel-heading">
					<h3 class="pts-panel-title"><i class="fa fa-pencil fas fa-edit fas fa-pen"></i> {{ text_form }}</h3>
				</div>
				<div class="pts-panel-body">
					<form action="" method="post" enctype="multipart/form-data" id="form-customer" class="pts-form-horizontal">
						<div class="pts-tab-content">
							<div class="pts-tab-pane active" id="tab-general">
								<div class="pts-row">
									
									<div class="pts-col-sm-10">
										<div class="pts-tab-content">
											<div class="pts-tab-pane active" id="tab-customer">
												<fieldset>
													
													<!-- country -->
													
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-storecountry">{{ entry_shipping_country }}</label>
														<div class="pts-col-sm-10">
															<select name="shipping_country" id="input-shippingcountry" class="pts-form-control">
																<option value="">{{ text_select }}</option>
																{% for country in countries %}
																{% if country.country_id == shipping_country %}
																<option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
																{% else %}
																<option value="{{ country.country_id }}">{{ country.name }}</option>
																{% endif %}
																{% endfor %}
															</select>
															{% if error_shipping_country  %}
															<div class="text-danger">{{ error_shipping_country }}</div>
															{% endif %}
														</div>
													</div>
													
													<!-- country -->
													
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-zip-from">{{ entry_zip_from }}</label>
														<div class="pts-col-sm-10">
															<input type="text" name="zip_from" value="{{ zip_from }}" placeholder="{{ entry_zip_from }}" id="input-zip-from" class="pts-form-control" />
															{% if error_zip_from %}
															<div class="text-danger">{{ error_zip_from }}</div>
														{% endif %}</div>
													</div>
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-zip-to">{{ entry_zip_to }}</label>
														<div class="pts-col-sm-10">
															<input type="text" name="zip_to" value="{{ zip_to }}" placeholder="{{ entry_zip_to }}" id="input-zip-to" class="pts-form-control" />
															{% if error_zip_to %}
															<div class="text-danger">{{ error_zip_to }}</div>
														{% endif %}</div>
													</div>
													
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-weight-from">{{ entry_weight_from }}</label>
														<div class="pts-col-sm-10">
															<input type="text" name="weight_from" value="{{ weight_from }}" placeholder="{{ entry_weight_from }}" id="input-weight-from" class="pts-form-control" />
															{% if error_weight_from %}
															<div class="text-danger">{{ error_weight_from }}</div>
														{% endif %}</div>
													</div>
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-weight-to">{{ entry_weight_to }}</label>
														<div class="pts-col-sm-10">
															<input type="text" name="weight_to" value="{{ weight_to }}" placeholder="{{ entry_weight_to }}" id="input-weight-to" class="pts-form-control" />
															{% if error_weight_to %}
															<div class="text-danger">{{ error_weight_to }}</div>
														{% endif %}</div>
													</div>
													<div class="pts-form-group required">
														<label class="pts-col-sm-2 pts-control-label" for="input-price">{{ entry_price }}</label>
														<div class="pts-col-sm-10">
															<input type="text" name="price" value="{{ price }}" placeholder="{{ entry_price }}" id="input-price" class="pts-form-control" />
															{% if error_price %}
															<div class="text-danger">{{ error_price }}</div>
														{% endif %}</div>
													</div>
												</fieldset>
												
											</div>
											
										</div>
									</div>
								</div>
							</div>
							
						</div>
					</form>
				</div>
			</div>
</div>
</div>
</div>
{{ footer }}