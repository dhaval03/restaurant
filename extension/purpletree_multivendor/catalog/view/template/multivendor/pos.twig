{{ header }}
<div class="pts-container container">
<div class="pts-row d-flex row">{{ column_left }}
	<div id="content" class="pts-col-sm-9 col-sm-9 pts-col-md-9 col-md-9 pts-col-lg-10 col-lg-10 pts-col-xs-12 col-xs-12"> <div class="page-header">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
		{% endif %}
		{% if success %}
		<div class="alert pts-alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
		{% endif %}
		<div class="container-fluid">
		 <h1>{{ heading_title }}</h1>
		  <ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		  </ul>
			
		</div>
	  </div>
			<form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-attribute">
				<div class="pts-table-responsive">
					<table class="pts-table pts-table-bordered pts-table-hover">
						<thead>
							<tr>
								<td class="pts-col-sm-6">
									<div class="pts-col-sm-4">
									<ul class="pts-nav">
											<b style="font-size: 24px !important;">Categories</b><br><br>
										{% for vendor_categorie in vendor_categories %}
											<li><a onclick="getCategorieProducts({{ vendor_categorie.category_id }})">{{ vendor_categorie.name }}</a></li>
											
										{% endfor %}
									</ul>
									</div>
									<div class="pts-col-sm-8">
										<div class="input-group">
											<input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
												<div class="input-group-btn">
													<button class="btn btn-default" type="submit">
													<span class="glyphicon glyphicon-search"></span>
													</button>
												</div>
										</div>
										<div id="append"></div>
								</td>
								<td class="pts-col-sm-6">
									<div class="pts-col-sm-12 pts-btn-group"  data-toggle="buttons">
									  <label class="pts-btn btn-primary active col-sm-4">
										<input type="radio" name="options" id="option1" checked> Dining
									  </label>
									  <label class="pts-btn btn-primary col-sm-4">
										<input type="radio" name="options" id="option2"> Delivery
									  </label>
									  <label class="pts-btn btn-primary col-sm-4">
										<input type="radio" name="options" id="option3"> Pickup
									  </label>
									</div><br><br>
									<div id="myimageDiv">
										<img id="myimage1" src="{{image1}}" alt="" width="40" height="40" style="margin-left:16px";/><i class="bi bi-airplane"></i>
										<img id="myimage1" class="bi bi-people" alt="" width="40" height="40"/>
									</div>
									
									<br>
									<div id="appended"></div>
								</td>
							</tr>
						</thead>
						
					</table>
				</div>
			</form>
		</div>
	</div>
</div>
<script>
function getCategorieProducts(category_id){			
	$("#append").empty();
	if(category_id > 0){
		$.ajax({
			url: 'index.php?route=extension/purpletree_multivendor/multivendor/pos|getCategorieProducts&language={{ language }}',
			type: 'post',
			data: 'category_id='+category_id,
			dataType: 'json',
			success: function (json) {
				if(json['success']){
					html = '';
					if(json['rt_products']){
						$.each(json['rt_products'],function(index, value){
							html += '<div class="col-md-6 product_img" onclick="getProductData('+value['product_id']+')"><img src="'+value['thumb']+'" alt="" width="60" height="60" style="padding-top: 10px"; title=""><br>'+value['name']+'</div>';
						});
					}
					$("#append").append(html);
				}	
			}
		}); 
	}
}
function getProductData(product_id){
	if(product_id > 0){
		$.ajax({
			url: 'index.php?route=extension/purpletree_multivendor/multivendor/pos|getProductDetails&language&language={{ language }}',
			type: 'post',
			data: 'product_id='+product_id,
			dataType: 'json',
			success: function (json) {
				if(json['success']){
					//alert(JSON.stringify(json['product_data']));
					html = '';
					if(json['product_data']){ //alert('kfgvdfkkkk');
						
						html += '<table class="table table-sm table-striped">';
						html += '<tr>';
						html += '<td class="text-start">{{column_name}}'; 
						html += '<td class="text-start">{{column_quantity}}'; 
						html += '<td class="text-start">{{column_total}}'; 
						html += '</td>'; 
						html += '</tr>'; 
						html += '<tr>'; 
						html += ' <td class="text-start">'+ json['product_data']['name'] +'</a>';
						html += '<td class="text-end"> '+ json['product_data']['quantity'] +'</td>';
						html += '<td class="text-end"> '+ json['product_data']['total'] +'</td>';
						html += '</tr>';
						html += '</table>';
						
					}
					$("#appended").append(html);
				}
			}
		});
	}
}
</script>
{{ footer }}