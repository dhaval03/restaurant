{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
		{% if helpcheck %}
			<div class="pull-right float-end">
				<a href="{{ helplink }}" rel=”nofollow”  target="_blank" id="button-pts-help" class="btn"><img src="{{ helpimage }}" alt="Help" width="85" height="43"></a>
			</div>
		{% endif %}
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
		  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
		{% endif %}
	   {% if success %}
		<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
		  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
       {% endif %}
		<div class="panel panel-default card">
			<div class="panel-heading">
				<h3 class="panel-title card-header"><i class="fa fa-list"></i> {{ text_bulk_shipping_upload }}</h3>
			</div>
			<div class="panel-body card-body">
				<div class="well card mb-3 p-3">
					<div class="row">
						<div class="col-sm-12 text-start">
							<div>
								<div>
									<label class="control-label col-form-label ptsc-bulkshipp-nofontweig" for="input-name">{{ text_maxtime_info }}</label><label class="ptsc-commission-fontbold">&nbsp;{{ max_time }}&nbsp;{{ text_seconds }}</label>
									
								</div>
								<div>
									
									<label class="control-label col-form-label ptsc-bulkshipp-nofontweig" for="input-name">{{ text_file_size_info }} </label><label class="ptsc-commission-fontbold">&nbsp;{{ memory_limit }}</label>
									
								</div>
							</div>
							
						</div>
					</div>
				</div>   
				<form action="{{ export }}" method="post" enctype="multipart/form-data" id="form-customer">
					<div class="panel-heading">
						<h3 class="panel-title card-header"><i class="fa fa-download"></i> {{ text_bulk_shipping_export_data }}</h3>
					</div>
					<div class="well card mb-3 p-3">
						<div class="row">
							<div class="col-sm-4 text-start">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_seller }}</label>
									<select name="seller_id" id="input-status" class="form-select">
										
										<option value="" >{{ text_none }} </option>
										{% for seller_id in seller_id %}
										
										<option value="{{ seller_id.seller_id  }}" >{{ seller_id.store_name }} ({{ seller_id.seller_id }})</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							<div class="col-sm-2 col-md-offset-6 offset-6 d-flex align-items-center text-start mt-4">
								<div class="form-group mt-2">
									<input type="submit" value="{{ button_export }}" class="btn btn-primary" class="button_add ptsc-upgrdatabas-padd">
									
								</div>
							</div>
							
						</div>
					</div>
				</form>
				<form action="{{ upload }}" method="post" enctype="multipart/form-data" id="form-customer">
					<div class="panel-heading">
						<h3 class="panel-title card-header"><i class="fa fa-upload"></i> {{ text_bulk_shipping_upload_data }}</h3>
					</div>
					<div class="well card mb-3 p-3">
						<div class="row">
							
							
							<div class="col-sm-4 text-start">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_seller }}</label>
									<select name="seller_id" id="input-status" class="form-select">
										
										<option value="" >{{ text_none }} </option>
										{% for seller_id in seller_id %}
										
										<option value="{{ seller_id.seller_id  }}" >{{ seller_id.store_name }} ({{ seller_id.seller_id }})</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							<div class="col-sm-6 text-start mt-3">
								<div class="form-group mt-1">
									<input  type="file" id="ptsshippingxml" style="height:35px; margin-top: 22px;"  name="import">
									
								</div>
							</div>
							
							<div class="col-sm-2  d-flex align-items-center text-start mt-4">
								<div class="form-group">
									<input type="submit" id="pts_button_upload" value="{{ button_upload }}" class="btn btn-primary" class="button_add ptsc-upgrdatabas-padd">
									
								</div>
							</div>
							
						</div>
					</div>
				</form>
				
			</div>
		</div>
	</div>
	
	{{ footer }} 
