{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
		{% if helpcheck %}
			<div class="pull-right float-end">
				<a href="{{ helplink }}" rel=”nofollow”  target="_blank" id="button-pts-help" class="btn"><img src="{{ helpimage }}" alt="Help" width="85" height="43"></a>
			</div>
		{% endif %}
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
		{% endif %}
	  {% if success %}
		<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		{% endif %}
		
		<div class="panel panel-default card">
			<div class="panel-heading">
				<h3 class="panel-title card-header"><i class="fa fa-list"></i> {{ column_plan }}</h3>
			</div>
			<div class="panel-body card-body">
				<form action="" method="post" enctype="multipart/form-data" id="form-category">
					<div class="table-responsive">
						<table class="table table-bordered table-hover">
							<thead>
								<tr>
									<td class="text-start">{{ column_sl }}</td>
									<td class="text-start">{{ column_plan_name }}</td>
									<td class="text-start">{{ column_sellername }}</td>
									<td class="text-start">{{ column_subscription_status }}</td>
									<td class="text-start">{{ column_invoice_status }}</td>
									<td class="text-start">{{ column_start_date }}</td>
									<td class="text-start">{{ column_End_date }}</td>
									<td class="text-start">{{ column_create_date }}</td>
									<td class="text-start">{{ column_action }}</td>
								</tr>    
							</thead>
							<tbody>
								{% if subscriptions %}
								{% for subscription in subscriptions %}
								<tr>
									<td class="text-start">{{  subscription.id }}</td>
									<td class="text-start">{{  subscription.plan_name }}</td>
									<td class="text-left">{{  subscription.seller_name }}</td>
									<td class="text-start">{{  subscription.subscription_status }}</td>
									<td class="text-start">{{  subscription.invoice_status }}</td>
									<td class="text-start">{{  subscription.start_date }}</td>
									<td class="text-start">{{  subscription.end_date }}</td>
									<td class="text-start">{{  subscription.created_date }}</td>
									<td> 
										<a href="{{ subscription.add_history }}" data-bs-toggle="tooltip" title="{{ button_Add_Payment_History }}" class="btn btn-default btn-light"><i class="fa fa-plus"></i></a>		 
										<a href="{{ subscription.view_invoice }}"  target="_blank" data-bs-toggle="tooltip" title="{{ button_view_invoicw }}" class="btn btn-success"><i class="fa fa-eye"></i></a>
										
									</td>
								</tr>
								{% endfor %}
								{% else %}
								<tr>
									<td class="text-center" colspan="10">{{  text_no_results }}</td>
								</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</form>
				<div class="row">
					<div class="col-sm-6 text-start">{{ pagination }}</div>
					<div class="col-sm-6 text-end">{{ results }}</div>
				</div> 
			</div>
		</div>
		
		
	</div>
</div>
{{  footer }}